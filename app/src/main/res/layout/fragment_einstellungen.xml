<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding"
                android:text="@string/einstellungen_country_titel"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <Spinner
                android:id="@+id/spinner_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:entries="@array/country_entries" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding"
                android:text="@string/einstellungen_delete_titel"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <Button
                android:id="@+id/btnSettingDelete"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:padding="@dimen/padding"
                android:text="@string/einstellungen_delete"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textViewSettingsDatensicherung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="@string/einstellungen_backup_titel" />

            <Button
                android:id="@+id/btnSettingSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="@string/einstellungen_backup"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/padding"
                android:padding="@dimen/padding"/>

            <Button
                android:id="@+id/btnSettingRestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="@string/einstellungen_restore"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/padding"
                android:padding="@dimen/padding"/>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

